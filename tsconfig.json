{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    // "rootDir": "./src",
    // "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "commonjs",
    "target": "ES2020",
    "types": [],
    // For nodejs:
    // "lib": ["esnext"],
    // "types": ["node"],
    // and npm install -D @types/node
    // paths
    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,

    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    //"moduleDetection": "force",
    "skipLibCheck": true,
    "rootDir": "./src", // dossier source
    "outDir": "./build", // dossier de compilation
    "esModuleInterop": true, // pour importer des modules CommonJS
    "moduleResolution": "node10", // résolution des modules à la manière de Node.js
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // permet d'importer des fichiers JSON
    "allowJs": true, // permet d'importer des fichiers JS
    "experimentalDecorators": true, // nécessaire pour TSOA
    "emitDecoratorMetadata": true, // nécessaire pour TSOA

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
